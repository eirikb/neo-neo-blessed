{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["ES2018"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": false,
    "incremental": true,
    "resolveJsonModule": true
  },
  "include": [
    "lib/**/*",
    "index.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "example",
    "test-runner.js",
    "debug-tty.js"
  ]
}